{
  "name": "Six Color Match Game",
  "short_name": "ColorMatch6",
  "description": "A fast UI Telegram Mini App 6-color matching game with Monetag ads, rainbow glow effects, and GCash withdrawal rewards.",
  "start_url": "./index.html",
  "scope": "./",
  "display": "standalone",
  "background_color": "#000000",
  "theme_color": "#1e1e1e",
  "orientation": "portrait",
  "icons": [
    {"src": "icons/icon-192.png", "type": "image/png", "sizes": "192x192"},
    {"src": "icons/icon-512.png", "type": "image/png", "sizes": "512x512"}
  ],
  "game_settings": {
    "colors": 6,
    "rainbow_background_class": "rainbow-shine",
    "fast_ui": true,
    "high_quality_ui": true
  },
  "ads": {
    "provider": "Monetag",
    "zone_id": "10276123",
    "reward_per_click_php": 0.012,
    "rewarded_function": "show_10276123().then(() => rewardUser())",
    "in_app_interstitial": {
      "type": "inApp",
      "frequency": 2,
      "capping_hours": 0.1,
      "interval_seconds": 30,
      "timeout_seconds": 5,
      "every_page": false
    },
    "interval_minutes": 6
  },
  "withdrawal": {
    "method": "GCash",
    "rate_php_per_click": 0.012,
    "minimum_withdraw_php": 20,
    "user_withdraw_url": "https://your-domain.com/withdraw?user="
  },
  "buttons": {
    "click_ads_button_1": {"text": "Click Ads", "class": "blue-button"},
    "click_ads_button_2": {"text": "Click Ads", "class": "blue-button"}
  }
}
